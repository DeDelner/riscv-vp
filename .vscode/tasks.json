{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "addPath",
            "type": "shell",
            "command": "export PATH=$PATH:/workspaces/riscv-vp/vp/build/bin"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rununrealsimulation",
            "type": "shell",
            "command": "export PATH=$PATH:/workspaces/riscv-vp/vp/build/bin && make sim",
            "options": {
                "cwd": "${workspaceFolder}/sw/simple-unreal"
            },
            "problemMatcher": []
        }
    ]
}